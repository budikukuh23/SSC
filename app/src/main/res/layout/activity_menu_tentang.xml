<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MenuTentangActivity">

    <RelativeLayout
        android:background="@color/orange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/backBtn"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="999dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/transparan"
            android:layout_width="30dp"
            android:layout_height="30dp">

            <ImageView
                android:src="@drawable/left_50px"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>


        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/backBtn"
            android:fontFamily="@font/segoe_ui"
            android:text="ASRS"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="16dp"
            android:paddingBottom="64dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/asrs2"
                android:layout_width="match_parent"
                android:layout_height="220dp"/>

            <TextView
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textSize="15dp"
                android:fontFamily="@font/montserrat"
                android:textStyle="normal"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:text="ASRS merupakan Aplikasi Pengenalan Komponen pada Automatic Storage &amp; Retrieval System Station berbantuan QR-Code. Aplikasi ini merupakan Tugas Akhir Skripsi pengembang yang dibuat untuk membantu mahasiswa pada pembelajaran mata kuliah Praktik Sistem Manufaktur Fleksibel.\n"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="32dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:padding="16dp"
                    android:background="@color/transparan"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageinfo2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"/>

                    <TextView
                        android:textSize="18dp"
                        android:fontFamily="@font/montserrat"
                        android:textStyle="bold"
                        android:layout_marginTop="16dp"
                        android:textColor="@color/orange"
                        android:text="Memperdayakan mahasiswa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <me.biubiubiu.justifytext.library.JustifyTextView
                        android:textSize="14dp"
                        android:fontFamily="@font/montserrat"
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp"
                        android:text="Membantu mahasiswa untuk menumbuhkan motivasi dalam mencari dan meningkatkan keilmuan secara daring dengan menggunakan teknologi digital sehingga menjadi pribadi unggul dalam persaingan di era globalisasi.\n"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginTop="32dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:background="@color/transparan"
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageinfo3"
                        android:layout_width="100dp"
                        android:layout_height="100dp"/>

                    <TextView
                        android:textSize="18dp"
                        android:fontFamily="@font/montserrat"
                        android:textStyle="bold"
                        android:layout_marginTop="16dp"
                        android:textColor="@color/orange"
                        android:text="Kemudahan dalam belajar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <me.biubiubiu.justifytext.library.JustifyTextView
                        android:textSize="14dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/montserrat"
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        android:text="Membantu mahasiswa untuk dapat mengakses keilmuan secara mandiri dengan lebih mudah dan cepat.\n"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textSize="18dp"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:textColor="@color/orange"
                android:text="Petunjuk Singkat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:elevation="3dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/gray"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:gravity="center"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/list_80px"
                        android:layout_width="48dp"
                        android:layout_height="48dp"/>

                    <TextView
                        android:text="Daftar"
                        android:textColor="@color/orange"
                        android:fontFamily="@font/montserrat"
                        android:textSize="16dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <me.biubiubiu.justifytext.library.JustifyTextView
                    android:textSize="14dp"
                    android:fontFamily="@font/montserrat"
                    android:textStyle="normal"
                    android:textColor="@color/black"
                    android:text="Menu Daftar berisi daftar gambar dan deskripsi komponen ASRS\n"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

            <LinearLayout
                android:elevation="3dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/gray"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:gravity="center"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/qr_code_80px"
                        android:layout_width="48dp"
                        android:layout_height="48dp"/>

                    <TextView
                        android:text="Scan"
                        android:textColor="@color/orange"
                        android:fontFamily="@font/montserrat"
                        android:textSize="16dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <me.biubiubiu.justifytext.library.JustifyTextView
                    android:textSize="14dp"
                    android:fontFamily="@font/montserrat"
                    android:textStyle="normal"
                    android:textColor="@color/black"
                    android:text="Menu Scan berisi fungsi untuk melakukan pemindaian kode QR komponen ASRS.\n"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

            <LinearLayout
                android:elevation="3dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/gray"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:gravity="center"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/laptop_play_video_80px"
                        android:layout_width="48dp"
                        android:layout_height="48dp"/>

                    <TextView
                        android:text="Video"
                        android:textColor="@color/orange"
                        android:fontFamily="@font/montserrat"
                        android:textSize="16dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <me.biubiubiu.justifytext.library.JustifyTextView
                    android:textSize="14dp"
                    android:fontFamily="@font/montserrat"
                    android:textStyle="normal"
                    android:textColor="@color/black"
                    android:text="Menu Video berisi video mengenai cara kerja ASRS dan MPS.\n"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

            <LinearLayout
                android:elevation="3dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/gray"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:gravity="center"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/d_printer_80px"
                        android:layout_width="48dp"
                        android:layout_height="48dp"/>

                    <TextView
                        android:text="MPS"
                        android:textColor="@color/orange"
                        android:fontFamily="@font/montserrat"
                        android:textSize="16dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <me.biubiubiu.justifytext.library.JustifyTextView
                    android:textSize="14dp"
                    android:fontFamily="@font/montserrat"
                    android:textStyle="normal"
                    android:textColor="@color/black"
                    android:text="Menu MPS berisi tentang teknologi MPS.\n"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

            <LinearLayout
                android:elevation="3dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/gray"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:gravity="center"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/info_80px"
                        android:layout_width="48dp"
                        android:layout_height="48dp"/>

                    <TextView
                        android:text="Tentang"
                        android:textColor="@color/orange"
                        android:fontFamily="@font/montserrat"
                        android:textSize="16dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <me.biubiubiu.justifytext.library.JustifyTextView
                    android:layout_marginTop="10dp"
                    android:textSize="14dp"
                    android:fontFamily="@font/montserrat"
                    android:textStyle="normal"
                    android:textColor="@color/black"
                    android:text="Menu Tentang berisi informasi mengenai tujuan, petunjuk penggunaan dan pengembang dari aplikasi ASRS.\n"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

            <TextView
                android:layout_gravity="center_horizontal"
                android:textSize="16dp"
                android:fontFamily="@font/segoe_ui"
                android:textStyle="bold"
                android:layout_marginTop="64dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:text="Pengembang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:id="@+id/dev"
                android:textSize="15dp"
                android:fontFamily="@font/segoe_ui"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:text="Abista Maksum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_gravity="center_horizontal"
                android:textSize="16dp"
                android:fontFamily="@font/segoe_ui"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:text="Dosen Pembimbing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:id="@+id/dosbing"
                android:textSize="15dp"
                android:fontFamily="@font/segoe_ui"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:text="Drs. Totok Heru Tri Maryadi, M.Pd."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_gravity="center_horizontal"
                android:textSize="16dp"
                android:fontFamily="@font/segoe_ui"
                android:textStyle="bold"
                android:layout_marginTop="32dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:text="Version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/versiapk"
                android:textSize="13dp"
                android:fontFamily="@font/segoe_ui"
                android:textStyle="normal"
                android:text="1.0.0"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="@color/white"
                android:id="@+id/share"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="35dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center_vertical"
                        android:textSize="15dp"
                        android:fontFamily="@font/segoe_ui"
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        android:text="Bagikan Aplikasi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:padding="2dp"
                        android:src="@drawable/paper_plane_30px"
                        android:layout_width="18dp"
                        android:layout_height="18dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>