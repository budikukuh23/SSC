<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".DaftarVideo">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:background="@color/orange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/backBtn"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="32dp"
                android:layout_marginStart="10dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="999dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/transparan"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:focusable="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/left_50px" />


            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_toRightOf="@id/backBtn"
                android:fontFamily="@font/segoe_ui"
                android:text="Daftar Video"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <ScrollView
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:id="@+id/vid1"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp"
                    app:cardBackgroundColor="@color/orange"
                    android:layout_width="match_parent"
                    android:layout_height="270dp">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:scaleType="centerCrop"
                            android:background="@color/gray"
                            android:layout_gravity="top"
                            android:id="@+id/gVid1"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"/>

                        <LinearLayout
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="10dp"
                            android:orientation="vertical"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:fontFamily="@font/segoe_ui"
                                android:textStyle="bold"
                                android:text="ASRS Station"
                                android:textSize="17sp"
                                android:maxLines="1"
                                android:textColor="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:fontFamily="@font/segoe_ui"
                                android:text="Sumber: Youtube/VWCCMediaGeeks"
                                android:textStyle="normal"
                                android:maxLines="1"
                                android:textSize="13sp"
                                android:textColor="@color/gray"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="32dp"
                    android:id="@+id/vid2"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp"
                    app:cardBackgroundColor="@color/orange"
                    android:layout_width="match_parent"
                    android:layout_height="270dp">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:scaleType="centerCrop"
                            android:background="@color/gray"
                            android:layout_centerInParent="true"
                            android:id="@+id/gVid2"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"/>

                        <LinearLayout
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="10dp"
                            android:orientation="vertical"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:fontFamily="@font/segoe_ui"
                                android:textStyle="bold"
                                android:text="Teknologi MPS 500 Festo"
                                android:textSize="17sp"
                                android:maxLines="1"
                                android:textColor="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:fontFamily="@font/segoe_ui"
                                android:text="Sumber: www.festo-didactic.com"
                                android:textStyle="normal"
                                android:maxLines="1"
                                android:textSize="13sp"
                                android:textColor="@color/gray"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>